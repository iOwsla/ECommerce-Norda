@model Category
<form class="form d-flex flex-column flex-lg-row"
	  method="post"
	  enctype="multipart/form-data"
	  asp-controller="Category"
	  asp-action="Edit"
	  asp-area="admin">

	<!--begin::Main column-->
	<div class="d-flex flex-column flex-row-fluid gap-7 gap-lg-10">
		<!--begin::General options-->
		<div class="card card-flush py-4">
			<!--begin::Card header-->
			<div class="card-header">
				<div class="card-title">
					<h2>General</h2>
				</div>
			</div>
			<!--end::Card header-->
			<!--begin::Card body-->
			<div class="card-body pt-0">

				<div class="mb-10 fv-row">
					<!--begin::Label-->
					<label class="required form-label" asp-for="@Model.Name"></label>
					<!--end::Label-->
					<!--begin::Input-->
					<input asp-for="@Model.Name" class="form-control mb-2">
					<input type="hidden" asp-for="@Model.ID" class="form-control mb-2">
					<!--end::Input-->
					<span class="text-danger fs-7" asp-validation-for="@Model.Name"></span>
				</div>

				<div class="mb-10 fv-row">
					<!--begin::Label-->
					<label class="required form-label" asp-for="@Model.Name"></label>
					<!--end::Label-->
					<!--begin::Input-->
					<select asp-for="@Model.ParentID" asp-items="@ViewBag.ParentCategories" class="form-select" data-control="select2" data-placeholder="Select an option">
						<option value="">Bir Kategori Seçiniz</option>
					</select>
					<!--end::Input-->
					<span class="text-danger fs-7" asp-validation-for="@Model.Name"></span>
				</div>
				<div class="mb-10 fv-row">
					<!--begin::Label-->
					<label class="required form-label" asp-for="@Model.DisplayIndex"></label>
					<!--end::Label-->
					<!--begin::Input-->
					<input asp-for="@Model.DisplayIndex" class="form-control mb-2">
					<!--end::Input-->
					<span class="text-danger fs-7" asp-validation-for="@Model.DisplayIndex"></span>
				</div>
				<!--end::Input group-->
			</div>
			<!--end::Card header-->
		</div>
		<!--end::General options-->

		<div class="d-flex justify-content-end">
			<!--begin::Button-->
			<a asp-area="admin" asp-controller="Category" asp-action="Index" class="btn btn-light me-5">İptal</a>
			<!--end::Button-->
			<!--begin::Button-->
			<button type="submit" class="btn btn-primary">
				Güncelle
			</button>
			<!--end::Button-->
		</div>
	</div>
	<!--end::Main column-->
</form>