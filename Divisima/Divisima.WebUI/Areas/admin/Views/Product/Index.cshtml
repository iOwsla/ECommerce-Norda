@model IEnumerable<Product>
<!--begin::Category-->
<div class="card card-flush">
    <!--begin::Card header-->
    <div class="card-header align-items-center py-5 gap-2 gap-md-5">
        <!--begin::Card title-->
        <div class="card-title">
            <!--begin::Search-->
            <div class="d-flex align-items-center position-relative my-1">
                <i class="ki-duotone ki-magnifier fs-3 position-absolute ms-4">
                    <span class="path1"></span>
                    <span class="path2"></span>
                </i>
                <input type="text" data-kt-ecommerce-category-filter="search" class="form-control form-control-solid w-250px ps-12" placeholder="Product Ara" />
            </div>
            <!--end::Search-->
        </div>
        <!--end::Card title-->
        <!--begin::Card toolbar-->
        <div class="card-toolbar">
            <!--begin::Add customer-->
            <a asp-area="admin" asp-controller="Product" asp-action="Create" class="btn btn-primary">Yeni Product Ekle</a>
            <!--end::Add customer-->
        </div>
        <!--end::Card toolbar-->
    </div>
    <!--end::Card header-->
    <!--begin::Card body-->
    <div class="card-body pt-0">
        <!--begin::Table-->
        <table class="table align-middle table-row-dashed fs-6 gy-5" id="kt_productr_table">
            <thead>
                <tr class="text-start text-gray-400 fw-bold fs-7 text-uppercase gs-0">

                    <th class="min-w-200px">Ürün Adı</th>
                    <th class="text-end min-w-100px">Marka</th>
                    <th class="text-end min-w-70px">Qty</th>
                    <th class="text-end min-w-100px">Price</th>
                    <th class="text-end min-w-100px">Rating</th>
                    <th class="text-end min-w-100px">Status</th>
                    <th class="text-end min-w-70px">Actions</th>
                </tr>
            </thead>
            <tbody class="fw-semibold text-gray-600">
                @foreach (Product product in Model)
                {
                    <tr>
                        <td>
                            <div class="d-flex align-items-center">
                                <!--begin::Thumbnail-->
                                <a href="../../demo1/dist/apps/ecommerce/catalog/edit-product.html" class="symbol symbol-50px">
                                    <span class="symbol-label" style="background-image:url(assets/media//stock/ecommerce/1.gif);"></span>
                                </a>
                                <!--end::Thumbnail-->
                                <div class="ms-5">
                                    <!--begin::Title-->
                                    <a href="../../demo1/dist/apps/ecommerce/catalog/edit-product.html" class="text-gray-800 text-hover-primary fs-5 fw-bold" data-kt-ecommerce-product-filter="product_name">@product.Name</a>
                                    <!--end::Title-->
                                </div>
                            </div>
                        </td>

                        <td class="text-end pe-0">
                            @if (product.Brand != null)
                            {
                                <span class="fw-bold">
                                    @product.Brand.Name
                                </span>
                            } else
                            {
                                <span class="fw-bold">
                                    Marka Bulunamadı
                                    </span>
                            }
                        </td>

                        <td class="text-end pe-0" data-order="40">
                            <span class="fw-bold ms-3">@string.Join(",", product.ProductCategories.Select(y => y.Category.Name))</span>
                        </td>

                        <td class="text-end pe-0">@product.Price TL</td>

                        <td class="text-end pe-0" data-order="rating-5">
                            <div class="rating justify-content-end">
                                <div class="rating-label checked">
                                    <i class="ki-duotone ki-star fs-6"></i>
                                </div>
                                <div class="rating-label checked">
                                    <i class="ki-duotone ki-star fs-6"></i>
                                </div>
                                <div class="rating-label checked">
                                    <i class="ki-duotone ki-star fs-6"></i>
                                </div>
                                <div class="rating-label checked">
                                    <i class="ki-duotone ki-star fs-6"></i>
                                </div>
                                <div class="rating-label checked">
                                    <i class="ki-duotone ki-star fs-6"></i>
                                </div>
                            </div>
                        </td>

                        <td class="text-end pe-0" data-order="Aktif">
                            <!--begin::Badges-->
                            <div class="badge badge-light-success">Aktif</div>
                            <!--end::Badges-->
                        </td>

                        <td class="text-end">
                            <a href="#" class="btn btn-sm btn-light btn-flex btn-center btn-active-light-primary" data-kt-menu-trigger="click" data-kt-menu-placement="bottom-end">
                                Ayarlar
                                <i class="ki-duotone ki-down fs-5 ms-1"></i>
                            </a>
                            <!--begin::Menu-->
                            <div class="menu menu-sub menu-sub-dropdown menu-column menu-rounded menu-gray-600 menu-state-bg-light-primary fw-semibold fs-7 w-125px py-4" data-kt-menu="true">
                                <!--begin::Menu item-->
                                <div class="menu-item px-3">
                                    <a asp-area="admin" asp-controller="Product" asp-action="Edit" asp-route-id="@product.ID" class="menu-link px-3">Düzenle</a>
                                </div>
                                <!--end::Menu item-->
                                <!--begin::Menu item-->
                                <div class="menu-item px-3">
                                    <a asp-area="admin" asp-controller="Product" asp-action="Delete" class="menu-link px-3 productDelete">Sil</a>
                                </div>
                                <div class="menu-item px-3">
                                    <a asp-area="admin" asp-controller="ProductPicture" asp-action="Index" class="menu-link px-3 productDelete">Ürün Resimleri</a>
                                </div>
                                <!--end::Menu item-->
                            </div>
                            <!--end::Menu-->
                        </td>
                    </tr>
                }
            </tbody>

        </table>
        <!--end::Table-->
    </div>
    <!--end::Card body-->
</div>
<!--end::Category-->


<div class="modal fade" tabindex="-1" id="modalDelete">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title">Dikkat!</h3>

                <div class="btn btn-icon btn-sm btn-active-light-primary ms-2" data-bs-dismiss="modal" aria-label="Close">
                    <i class="ki-duotone ki-cross fs-1"><span class="path1"></span><span class="path2"></span></i>
                </div>
            </div>
            <div class="modal-body">
                <h1 class="text-danger">Veriyi silmek istediğine emin misin ?</h1>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">Hayır</button>
                <a class="btn btn-primary" onclick="deleteProduct(silinecekID)">Evet</a>
            </div>
        </div>
    </div>
</div>