@model IEnumerable<ProductPicture>
<!--begin::Category-->
<div class="card card-flush">
	<!--begin::Card header-->
	<div class="card-header align-items-center py-5 gap-2 gap-md-5">
		<!--begin::Card title-->
		<div class="card-title">
			<!--begin::Search-->
			<div class="d-flex align-items-center position-relative my-1">
				<i class="ki-duotone ki-magnifier fs-3 position-absolute ms-4">
					<span class="path1"></span>
					<span class="path2"></span>
				</i>
				<input type="text" data-kt-ecommerce-category-filter="search" class="form-control form-control-solid w-250px ps-12" placeholder="ProductPicture Ara" />
			</div>
			<!--end::Search-->
		</div>
		<!--end::Card title-->
		<!--begin::Card toolbar-->
		<div class="card-toolbar">
			<!--begin::Add customer-->
			<a asp-area="admin" asp-controller="ProductPicture" asp-action="Create" asp-route-productId="@ViewBag.ProductId" class="btn btn-primary">Yeni ProductPicture Ekle</a>
			<!--end::Add customer-->
		</div>
		<!--end::Card toolbar-->
	</div>
	<!--end::Card header-->
	<!--begin::Card body-->
	<div class="card-body pt-0">
		<!--begin::Table-->
		<table class="table align-middle table-row-dashed fs-6 gy-5" id="kt_productPicturer_table">
			<thead>
				<tr class="text-start text-gray-400 fw-bold fs-7 text-uppercase gs-0">
					<th class="min-w-250px">Resim</th>
					<th class="min-w-250px">Açıklaması</th>
					<th class="min-w-150px">Sırası</th>
					<th class="text-end min-w-70px"></th>
				</tr>
			</thead>
			<tbody class="fw-semibold text-gray-600">
				@foreach (ProductPicture productPicture in Model)
				{
					<tr>
						<td>
							<div class="d-flex">
								<a class="symbol symbol-50px">
									<span class="symbol-label" style="background-image:url(@productPicture.Picture);"></span>
								</a>
							</div>
						</td>
						<!--begin::Thumbnail-->
						<td>
							<div class="text-muted fs-7 fw-bold">@productPicture.Name</div>
						</td>
						
						<td>
							<!--begin::Badges-->
							<div class="text-muted fs-7 fw-bold">@productPicture.DisplayIndex</div>
							<!--end::Badges-->
						</td>
						<td class="text-end">
							<a href="#" class="btn btn-sm btn-light btn-active-light-primary btn-flex btn-center" data-kt-menu-trigger="click" data-kt-menu-placement="bottom-end">
								Ayarlar
								<i class="ki-duotone ki-down fs-5 ms-1"></i>
							</a>
							<!--begin::Menu-->
							<div class="menu menu-sub menu-sub-dropdown menu-column menu-rounded menu-gray-600 menu-state-bg-light-primary fw-semibold fs-7 w-125px py-4" data-kt-menu="true">
								<!--begin::Menu item-->
								<div class="menu-item px-3">
									<a class="menu-link px-3" asp-area="admin" asp-controller="ProductPicture" asp-action="Edit" asp-route-productId="@ViewBag.ProductId" asp-route-id="@productPicture.ID">Düzenle</a>
								</div>
								<!--end::Menu item-->
								<!--begin::Menu item-->
								<div class="menu-item px-3">
                                    <a class="menu-link px-3 productPictureDelete" rowID="@productPicture.ID" productID="@productPicture.ProductID">
                                        Sil
                                    </a>
								</div>
								<!--end::Menu item-->
							</div>
							<!--end::Menu-->
						</td>

						
					</tr>
					

				}
				
			</tbody>
			<!--end::Table body-->
		</table>
		<!--end::Table-->
	</div>
	<!--end::Card body-->
</div>
<!--end::Category-->