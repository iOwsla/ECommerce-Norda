@model ProductVM
@{
    var product = Model.Product;
    var productImages = product.ProductPictures;
}


<div class="breadcrumb-area bg-gray">
    <div class="container">
        <div class="breadcrumb-content text-center">
            <ul>
                <li>
                    <a href="index.html">Anasayfa</a>
                </li>
                <li class="active">Ürün Detayı </li>
            </ul>
